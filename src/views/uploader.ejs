<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <!-- Logout Button -->
    <div id="loggedInButtons">
      <form id="logOutForm" action="/uploader/logOut" method="get">
        <button type="submit">Log Out</button>
      </form>
      <!-- File Upload -->
      <h2>Upload a File</h2>
      <form
        action="/uploader/upload"
        method="post"
        enctype="multipart/form-data"
      >
        <div class="form-group">
          <label for="file">Choose file:</label>
          <input type="file" id="file" name="file" required />
        </div>
        <button type="submit">Upload File</button>
      </form>
      <!-- Create Folder for uploads -->
      <form id="createFolder" action="/uploader/folder" method="post">
        <input type="text" name="createFolderName" id="createFolderName" />
        <input type="hidden" name="parentId" id="parentIdField" value="" />
        <button type="submit">Create Folder</button>
      </form>

      <!-- Error Message Display -->
      <% if (errorMessage) { %>
      <div class="error-message"><%= errorMessage %></div>
      <% } %>
    </div>

    <div id="displayContainer">
      <!-- Display folders & files -->
      <% userFolders.forEach(function(folder) { %>
      <div class="folderContainer">
        <li
          class="folder"
          id="folder<%=folder.id %>"
          onclick="openFolder('<%= folder.id %>')"
        >
          <div>
            <p><%= folder.name %></p>
            <!-- add edit button/form? for name -->
          </div>
          <div class="folderDetails">
            <p>Created:<%= new Date(folder.createdAt).toLocaleString() %></p>
            <form
              action="/uploader/folder/<%=folder.id %>/delete"
              method="post"
            >
              <button type="submit" id="deleteButton<%=folder.id %>">
                delete
              </button>
            </form>
          </div>
        </li>
      </div>

      <!-- Folder content -->
      <div
        class="folderContent"
        id="content<%=folder.id %>"
        style="display: none"
      >
        <p>Items in this folder will appear here...</p>
        <!-- Future: Files and subfolders will be loaded here -->
      </div>
      <% }); %>
    </div>

    <!-- Footer -->
    <%- include('footer'); %>

    <script src="/scripts/uploaderScripts.js"></script>
  </body>
</html>
