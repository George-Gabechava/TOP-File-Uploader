<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <!-- Logout Button -->
    <div id="loggedInButtons">
      <form id="logOutForm" action="/uploader/logOut" method="get">
        <button type="submit">Log Out</button>
      </form>
      <!-- File Upload -->
      <h2>Upload a File</h2>
      <form
        action="/uploader/upload"
        method="post"
        enctype="multipart/form-data"
      >
        <div class="form-group">
          <label for="file">Choose file:</label>
          <input type="file" id="file" name="file" required />
        </div>
        <button type="submit">Upload File</button>
      </form>
      <!-- Create Folder for uploads -->
      <form id="createFolder" action="/uploader/folder" method="post">
        <input type="text" name="createFolderName" id="createFolderName" />
        <button type="submit">Create Folder</button>
      </form>
    </div>

    <div id="displayContainer">
      <!-- Display folders & files -->
      <% userFolders.forEach(function(folder) { %>
      <li class="folder">
        <p><%= folder.name %></p>
        <p><%= folder.createdAt %></p>
      </li>
      <% }); %>
    </div>

    <!-- Footer -->
    <%- include('footer'); %>
  </body>
</html>
